<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="colorPrimary">@android:color/holo_green_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/base</item>
    </style>

    <style name="LabelledMarqueeEditTextCustomStyle">
        <item name="baseColor">@color/base</item>
        <item name="highlightColor">@android:color/holo_green_light</item>
        <item name="errorColor">@android:color/holo_red_dark</item>
    </style>

    <style name="LabelledMarqueeEditTextCustomStyle2">
        <item name="baseColor">@android:color/holo_purple</item>
        <item name="highlightColor">@android:color/holo_orange_dark</item>
        <item name="errorColor">@android:color/holo_red_dark</item>
    </style>

</resources>
