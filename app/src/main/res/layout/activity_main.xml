<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shiftable="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guilhermesgb.shiftableedittext.view.MainActivity">

    <com.guilhermesgb.shiftableedittext.ShiftableEditText
        android:id="@+id/shiftable_edit_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Phone"
        android:inputType="text"
        shiftable:mode="edit"
        shiftable:iconKey="md-local-phone"/>

</RelativeLayout>
